APP_ENV=production
APP_VERSION=v3.6
NODE_ROLE=master
IS_LEADER=1
READ_ONLY=0
SCHEDULER_ENABLED=1

# ---------------------------------------------------------------------------
# LLM PROVIDERS — set exactly ONE primary; the rest are fallback/backup.
# All services in the ecosystem route AI calls through this node.
# ---------------------------------------------------------------------------
# Primary: Anthropic (Claude)
